// Typography
$base-font-family= 'Noto Sans', sans-serif;
$heading-font-family= $base-font-family;

// Font Sizes
$base-font-size= 1rem;

// Line height
$base-line-height= 1.5;
$heading-line-height= 1.2;

// Other Sizes
$base-border-radius= 3px;
$base-spacing= $base-line-height * 1rem;
$small-spacing= $base-spacing / 2;
$base-z-index= 0;

// Colors
$blue= #477dca;
$dark-gray= #333;
$medium-gray= #999;
$light-gray= #ddd;
$color-white=#fff;
$color-off-white=#fdfdfd;

$color-primary= $color3;
$color-secondary= #fefefe;//#F0C17D;//$color4;
$color-primary-inverse=#aa4c4c;
$color-secondary-inverse=$color1;

// Font Colors
$base-font-color= $color-secondary;
$action-color= $color-secondary-inverse;

// Border
$base-border-color= $light-gray;
$base-border= 1px solid $base-border-color;

// Background Colors
$base-background-color= $color-off-white;
$secondary-background-color= lighten($base-border-color, 10%);

// Forms
$form-box-shadow= inset 0 1px 3px rgba(#000, 0.06);
$form-box-shadow-focus= $form-box-shadow, 0 0 5px adjust-color($action-color, $lightness= -5%, $alpha= -0.3);

//small-spacing
$default-spacing= 10px;

//breakpoints
$bp-tablet= 1024px;
$bp-between= 768px;
$bp-mobile= 480px;
$bp-mobile-small= 360px;
$bike-spin-duration= 0.25s;
$bike-animation-duration= 1.25s;

/* Coolors Exported Palette - coolors.co/550527-688e26-2f4858-f6ae2d-f26419 */

/* HSL */
$color1= hsla(335%, 89%, 18%, 1);
$color2= hsla(82%, 58%, 35%, 1);
$color3= hsla(203%, 30%, 26%, 1);
$color4= hsla(39%, 92%, 57%, 1);
$color5= hsla(21%, 89%, 52%, 1);

/* RGB */
$color1= rgba(85, 5, 39, 1);
$color2= rgba(104, 142, 38, 1);
$color3= rgba(47, 72, 88, 1);
$color4= rgba(246, 174, 45, 1);
$color5= rgba(242, 100, 25, 1);

px-to-rem(fontInPx, basePx = 16px) {
  return unit(fontInPx / basePx,rem);
}
